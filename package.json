{
    "name": "app-backend",
    "description": "Backend",
    "scripts": {
        "start": "tsc && nodemon --watch \"src/**/*.ts\" -e ts,json --exec \"ts-node --transpile-only ./src/server.ts\"",
        "test": "nodemon --exec \"cross-env NODE_ENV=test mocha -r ts-node/register ./src/**/*.test.ts --exit || exit 1\"",
        "build:documentation": "copyfiles --flat ./src/documentation/openapi.json ./dist/documentation/",
        "build": "tsc && npm run build:documentation",
        "db:create": "npm run build && node ./dist/database/migrations/create",
        "prettier": "npx prettier --write .",
        "build:docker_image": "sudo docker build --no-cache -t ups_backend .",
        "docker:compose": "npm run build:docker_image && sudo docker compose up"
    },
    "dependencies": {
        "databaseProviders": "git+https://g.yakimenko:gamburger-123@gitlab.upstorage.net/us-web/databaseprovidersmodule.git#master",
        "services": "git+https://g.yakimenko:gamburger-123@gitlab.upstorage.net/us-web/servicemodule.git#master",
        "@google-cloud/storage": "5.3.0",
        "@sendgrid/mail": "7.2.6",
        "@types/mongoose": "^5.11.97",
        "@types/redis": "^2.8.32",
        "amqplib": "^0.8.0",
        "aws-sdk": "2.756.0",
        "bcrypt": "^5.0.1",
        "cli-highlight": "2.1.4",
        "cors": "2.8.5",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "express-rate-limit": "5.1.3",
        "formidable-serverless": "1.0.3",
        "google-auth-library": "^8.0.3",
        "helmet": "4.1.1",
        "jsonwebtoken": "8.5.1",
        "lodash": "^4.17.21",
        "moment": "2.28.0",
        "mongoose": "^5.12.7",
        "mv": "2.1.1",
        "passport": "0.4.1",
        "passport-facebook": "3.0.0",
        "passport-google-oauth": "2.0.0",
        "redis": "^3.1.2",
        "stripe": "8.96.0",
        "swagger-ui-dist": "3.44.1",
        "ws": "^8.2.3"
    },
    "private": true,
    "devDependencies": {
        "@types/ws": "^8.2.2",
        "copyfiles": "2.3.0",
        "cross-env": "7.0.2",
        "mocha": "8.1.3",
        "node-mocks-http": "1.9.0",
        "nodemon": "2.0.4",
        "prettier": "2.6.2",
        "ts-node": "9.0.0",
        "typescript": "4.0.3"
    }
}
